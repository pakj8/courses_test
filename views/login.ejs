<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <div class="form-group">
              <label for="role">Role</label>
              <select name="role" id="">
                <option class="form-control" value="userA">User_A</option>
                <option class="form-control" value="userB">User_B</option>
                <option class="form-control" value="userC">User_C</option>
                <option class="form-control" value="userD">User_D</option>
              </select>
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
          </form>

        </div>
      </div>
    </div>

    

  </div>
</div>

<%- include('partials/footer') %>
